<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mashiro.mapper.CategoryMapper">

    <!--新增分类-->
    <insert id="createType" parameterType="com.mashiro.entity.Category">
        insert into blog.b_type values (#{id}, #{name})
    </insert>

    <!--根据id获取分类-->
    <select id="getTypeById" resultType="com.mashiro.entity.Category">
        select id,t.name from blog.b_type t where id = #{id}
    </select>

    <!--根据名称来查询-->
    <select id="getTypeByName" resultType="com.mashiro.entity.Category">
        select * from blog.b_type t where t.name = #{name}
    </select>

    <!--查询所有分类-->
    <select id="getAllType" resultType="com.mashiro.entity.Category">
        select * from blog.b_type
    </select>

    <!--查询分类下的所有博客-->
    <select id="getAllTypeAndBlog" resultMap="type">
        select t.id tid, t.name, b.id bid, b.title, b.type_id
        from b_type t, b_blog b
        where t.id = b.type_id
    </select>

    <resultMap id="type" type="com.mashiro.entity.Category">
        <id property="id" column="tid"/>
        <result property="name" column="name"/>
        <!-- 配置一对多的关系
            property：填写pojo类中集合类类属性的名称
            javaType：填写集合类型的名称
        -->
        <collection property="blogs" ofType="com.mashiro.entity.Blog">
            <id property="id" column="bid"/>
            <result property="title" column="title"/>
        </collection>
    </resultMap>

    <!--更新修改分类-->
    <update id="updateType" parameterType="com.mashiro.entity.Category">
        update blog.b_type t set t.name = #{name} where id = #{id}
    </update>

    <!--根据id删除分类-->
    <delete id="deleteType" parameterType="long">
        delete from blog.b_type where id = #{id}
    </delete>
</mapper>
