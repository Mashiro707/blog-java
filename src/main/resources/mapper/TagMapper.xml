<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.shili.mapper.TagMapper">

    <!--新增标签-->
    <insert id="createTag" parameterType="Tag">
        insert into blog.b_tag values (#{id}, #{name})
    </insert>

    <!--根据id获取标签-->
    <select id="getTagById" resultType="Tag">
        select id,t.name from blog.b_tag t where id = #{id}
    </select>

    <!--根据名称来标签-->
    <select id="getTagByName" resultType="Tag">
        select * from blog.b_tag t where t.name = #{name}
    </select>

    <!--查询所有标签-->
    <select id="getAllTag" resultType="Tag">
        select * from blog.b_tag;
    </select>

    <!--查询标签下的所有博客-->
    <select id="getAllTagAndBlog" resultMap="tags">
        select t.id tid, t.name, b.id bid, b.title, b.tag_id
        from blog.b_tag t, blog.b_blog b, blog.b_blog_tags bt
        where t.id = bt.tag_id and b.id = bt.blog_id
    </select>

    <resultMap id="tags" type="Tag">
        <id property="id" column="tid"/>
        <result property="name" column="name"/>
        <collection property="blogs" ofType="Blog">
            <id property="id" column="bid"/>
            <result property="title" column="title"/>
        </collection>
    </resultMap>

    <!--更新修改标签-->
    <update id="updateTag" parameterType="Tag">
        update blog.b_type t set t.name = #{name} where id = #{id}
    </update>

    <!--根据id删除标签-->
    <delete id="deleteTag" parameterType="long">
        delete from blog.b_type where id = #{id}
    </delete>
</mapper>
